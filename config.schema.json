{
  "pluginAlias": "Neakasa",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Neakasa"
      },
      "username": {
        "title": "Email/Username",
        "type": "string",
        "required": true,
        "placeholder": "your@email.com"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true
      },
      "pollInterval": {
        "title": "Poll Interval (seconds)",
        "type": "integer",
        "default": 60,
        "minimum": 30,
        "description": "How often to check for updates from the Neakasa cloud"
      },
      "debug": {
        "title": "Enable Debug Logging",
        "type": "boolean",
        "default": false
      }
    }
  },
  "layout": [
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
        {
          "key": "username",
          "flex": "1 1 50%"
        },
        {
          "key": "password",
          "flex": "1 1 50%"
        }
      ]
    },
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
        {
          "key": "pollInterval",
          "flex": "1 1 50%"
        },
        {
          "key": "debug",
          "flex": "1 1 50%"
        }
      ]
    }
  ]
}
